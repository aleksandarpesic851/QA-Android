<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lLayoutAskToExpertListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <UIControl.CustomTextViewBold
            android:id="@+id/txtTitleAskToExpertListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />

        <UIControl.ExpandableTextView
            android:id="@+id/txtCommentAskToExpertListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <UIControl.CustomTextViewRegular
            android:id="@+id/txtStudentNameAskToExpertListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <UIControl.CustomTextViewRegular
            android:id="@+id/txtDateAskToExpertListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />
</LinearLayout>