<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/rootLayoutChapterVideoListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"

        android:paddingTop="15dp">

        <RelativeLayout
            android:id="@+id/rLayoutDownloadVideoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDownloadChapterVideoListItem"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/download_1"/>

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/like"/>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tab4clickable_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/rLayoutDownloadVideoView"
            android:background="@android:color/transparent">

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start">

                <ImageView
                    android:id="@+id/imgVideoImageChapterVideoListItem"
                    android:layout_width="@dimen/tab1fragimg_width"
                    android:layout_height="@dimen/tab1fragimg_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_img"/>

                <!-- <LinearLayout
                    android:layout_width="@dimen/tab1fragimg_width"
                    android:layout_height="@dimen/tab1fragimg_height"
                    android:alpha="0.2"
                    android:background="#000000"/> -->

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/tab1frag_marginleft"
                android:orientation="vertical">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtVideoTitleChapterVideoListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Graphical Resprestation"
                    android:textColor="#000000"
                    android:textSize="17sp"/>


                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtVideoDescChapterVideoListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/tab1frag_secondtext"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <UIControl.CustomTextViewRegular
                        android:id="@+id/txtVideoDurationChapterVideoListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="10m 0s"
                        android:textSize="@dimen/tab1frag_secondtext"/>

                    <View
                        android:id="@+id/separatorOne"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@android:color/darker_gray"/>

                    <UIControl.CustomTextViewRegular
                        android:id="@+id/txtVideoSizeChapterVideoListItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="230 MB"
                        android:textSize="@dimen/tab1frag_secondtext"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider_chaptername"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#d3d3d3"/>

</LinearLayout>

