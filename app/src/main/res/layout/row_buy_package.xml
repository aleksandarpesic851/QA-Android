<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <UIControl.CustomRadioButton
            android:id="@+id/rdPackageNamePackageListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/form_margin_ten"
            android:paddingRight="@dimen/form_margin_ten">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtOffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/form_margin_ten"
                    android:background="@drawable/offer_drawable"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="OFFER"
                    android:textColor="@color/colorOfferText"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtOriginalPricePackageListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="110"
                    android:textColor="@color/greyBuyStrikeThrough"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtOfferPricePackageListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="90"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="20% OFF"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <UIControl.CustomTextViewRegular
                android:id="@+id/txtPeriodPackageListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Period : 5 Months"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_weight=".38"
            android:layout_marginRight="10dp"
            android:background="@color/colorDaysBackGround"
            android:orientation="horizontal">

            <UIControl.CustomTextViewRegular
                android:id="@+id/txtOriginalDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:text="300"
                android:textColor="@color/colorDaysText"
                android:textSize="13sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtOfferDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="450"
                    android:textColor="@color/colorDaysText"
                    android:textSize="16sp" />

                <UIControl.CustomTextViewRegular
                    android:id="@+id/txtDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DAYS"
                    android:textColor="@color/colorDaysText"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorNavigationGrey"/>

</LinearLayout>