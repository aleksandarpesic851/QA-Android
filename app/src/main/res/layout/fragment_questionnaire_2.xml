<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingTop="10dp">

        <UIControl.CustomTextViewBold
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/question_second"
            android:textColor="@color/black_87"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/option_21_card"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/question2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="5dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/option_21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/questionnaire_rectangle">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/option_21_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/option_2_1"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/option_22_card"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/option_21_card"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="5dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/option_22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/questionnaire_rectangle">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/option_22_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/option_2_2"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/option_23_card"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/option_22_card"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="5dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/option_23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/questionnaire_rectangle">

                <UIControl.CustomTextViewRegular
                    android:id="@+id/option_23_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/option_2_3"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/option_24_card"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/option_23_card"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/option_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/questionnaire_rectangle">

                <!-- Commented by IZISS to show four options-->
                <!--<EditText
                    android:id="@+id/option_24_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:hint="@string/option_other"
                    android:maxLines="2"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />-->

                <UIControl.CustomTextViewRegular
                    android:id="@+id/option_24_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/option_2_4"
                    android:textColor="@color/black_87"
                    android:textSize="16sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/option_24_card"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <UIControl.CustomTextViewBold
            android:id="@+id/question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/question_third"
            android:textColor="@color/black_87"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/top_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/option_31_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:cardElevation="5dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/option_31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/questionnaire_rectangle">

                            <UIControl.CustomTextViewRegular
                                android:id="@+id/option_31_ans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="@string/option_3_1"
                                android:textColor="@color/black_87"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/option_32_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:cardElevation="5dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/option_32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/questionnaire_rectangle">

                            <UIControl.CustomTextViewRegular
                                android:id="@+id/option_32_ans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="@string/option_3_2"
                                android:textColor="@color/black_87"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_option_layout"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/option_33_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:cardElevation="5dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/option_33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/questionnaire_rectangle">

                            <UIControl.CustomTextViewRegular
                                android:id="@+id/option_33_ans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="@string/option_3_3"
                                android:textColor="@color/black_87"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/option_34_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="6dp"
                        card_view:cardElevation="5dp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/option_34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/questionnaire_rectangle">

                            <UIControl.CustomTextViewRegular
                                android:id="@+id/option_34_ans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:text="@string/option_3_4"
                                android:textColor="@color/black_87"
                                android:textSize="16sp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottom_option_layout"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/button_background_rounded_rectangle"
            android:padding="15dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</ScrollView>