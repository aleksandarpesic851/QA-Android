<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llChapterSearchItem"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/default_half_margin"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <UIControl.CustomTextViewRegular
        android:id="@+id/tvChapterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:singleLine="true"
        android:layout_margin="@dimen/default_half_margin"
        tools:text="Graphical Resprestation"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:background="@null"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAppSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_4dp"
        android:orientation="horizontal"/>

    <View
        android:id="@+id/divider_tab1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingTop="@dimen/margin_4dp"
        android:paddingBottom="@dimen/margin_4dp"
        android:background="#d3d3d3" />
</LinearLayout>