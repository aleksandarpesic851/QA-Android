<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNavigationHeader"
    android:gravity="top"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgsize_nav_header"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/transparent_logo" />

    <UIControl.CustomTextViewRegular
        android:id="@+id/txtUserNameNavigationScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="David John"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:visibility="gone" />

    <UIControl.CustomTextViewRegular
        android:id="@+id/txtUserCodeNavigationScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="555FDD3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size"
        android:visibility="gone" />

</LinearLayout>
