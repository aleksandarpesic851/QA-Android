<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <UIControl.CustomTextViewBold
            android:id="@+id/txtStudentNameAskToExpertDiscussionListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />


        <UIControl.ExpandableTextView
            android:id="@+id/txtCommentAskToExpertDiscussionListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <UIControl.CustomTextViewRegular
            android:id="@+id/txtDateAskToExpertDiscussionListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>



    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

</LinearLayout>